@using System.Web.Optimization
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - KNB</title>
    @Styles.Render("~/Content/bootstrap.css")
    @Styles.Render("~/Content/css")

</head>
<body style="min-height: 100vh;">
    <nav class="navbar navbar-expand-lg navbar-light" style="background-color:rgba(227, 242, 253, 0.9)">
        <div class="container-fluid">
            @Html.ActionLink("K-N-B", "Index", "Home", new { arrea = "" }, new { @class = "navbar-brand" })
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        @Html.ActionLink("Main", "Index", "Home", null, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("About", "About", "Home", null, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Contact", "Contact", "Home", null, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Profile", "UserProfile", "Manage", null, new { @class = "nav-link" })
                    </li>
                </ul>
            </div>
            <div class="collapse navbar-collapse" id="navbarNav" style="flex-grow: unset">
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </nav>

    <div class="container-fluid">
        @RenderBody()
        <footer>
            <div class="footerStyle">
                <hr />
                <p>&copy; @DateTime.Now.Year - KNB</p>
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Scripts/bootstrap.js")
    @Scripts.Render("~/bundles/modernizr")

    @RenderSection("scripts", required: false)

</body>
</html>