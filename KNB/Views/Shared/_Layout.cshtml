@using System.Web.Optimization
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - KNB</title>
    <link rel="stylesheet" href="~/Content/bootstrap.css"/>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/bundles/modernizr")

</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light" style="background-color:rgba(227, 242, 253, 0.9)">
        <div class="container-fluid">
            @Html.ActionLink("K-N-B", "Index", "Home", new { arrea = "" }, new { @class = "navbar-brand" })
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        @Html.ActionLink("Main", "Index", "Home", null, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @*<a class="nav-link" href="#">Features</a>*@
                    </li>
                    <li class="nav-item">
                        @*<a class="nav-link" href="#">Pricing</a>*@
                    </li>
                    <li class="nav-item">
                        @*<a class="nav-link disabled">Disabled</a>*@
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container-fluid ">
        @RenderBody()
        <footer>
            <div class="footerStyle">
                <hr />
                <p>&copy; @DateTime.Now.Year - KNB</p>
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
    @RenderSection("scripts", required: false)

</body>
</html>